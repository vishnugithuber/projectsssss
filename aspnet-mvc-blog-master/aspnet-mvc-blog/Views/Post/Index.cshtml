@{
    ViewBag.PageTitle = Model.Title;
}
<div class="row">

    <!-- Post Content Column -->
    <div class="col-lg-8">

        <!-- Title -->
        <h1 class="mt-4">@Model.Title</h1>

        <!-- Author -->
        <p class="lead">by <span class="badge badge-pill bg-primary text-white">@Html.ActionLink((string)Model.Author.Title, (string)Model.Author.Slug, "author", new { }, new { @class = "text-white" })</span></p>

        <hr>

        <!-- Category/Date/Time -->
        <p>
            @foreach (var category in Model.Categories)
            {
                <span class="badge badge-pill bg-secondary">@Html.ActionLink((string)category.Title, (string)@category.Slug, "category", new { }, new { @class = "text-white" })</span>
            }
            Posted on @Model.DateTime.ToLongDateString() at @Model.DateTime.ToShortTimeString()
        </p>

        <hr>

        <!-- Post Content -->
        @Html.Raw(Model.Content)

        <hr>

        @if (Model.CommentStatus)
        {
            @Html.Raw(ViewData["CommentSystemCode"])
        }

    </div>

    @Html.Partial("Partials/Sidebar")

</div>